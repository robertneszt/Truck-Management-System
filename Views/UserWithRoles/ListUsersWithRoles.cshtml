@model List<TMS_APP.Models.DTO.UserWithRolesViewModel>

 

@{
    ViewData["Title"] = "ListUsersWithRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


 

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

 

    th, td {
        padding: 10px;
        text-align: left;
        border: 1px solid #ccc;
    }

 

    th {
        background-color: #f2f2f2;
    }

 

    th, td:first-child {
        border-left: none;
    }

 

    th, td:last-child {
        border-right: none;
    }

 

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

 

    a {
        text-decoration: none;
        color: #007bff;
    }
</style>

<a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">Register New User</a>

<br />
<h3>All Users: </h3>
<br />
<table>
<thead>
<tr>
<th>User Name</th>
<th>Email</th>
<th>Roles</th>
<th>Active</th>
<th>PayRate</th>

<th>Actions</th>
</tr>
</thead>
<tbody>
        @foreach (var user in Model)
        {
<tr>
<td>@user.UserName</td>
<td>@user.Email</td>
<td>@string.Join(", ", user.Roles)</td>
<td>@user.Status</td>
<td>@user.PayRate</td>

                
<td>
<a asp-action="Edit" asp-route-id="@user.UserId">Edit</a> |
<a asp-action="Details" asp-route-id="@user.UserId">Details</a> |
@*  <a asp-action="Delete" asp-route-id="@user.UserId">Delete</a>*@
</td>
</tr>
        }
</tbody>
</table>