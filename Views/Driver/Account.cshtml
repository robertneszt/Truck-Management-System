@model TMS_APP.Models.ApplicationUser

@{
   
    Layout = "~/Views/Shared/_LayoutForDriver.cshtml";
}

<h2>@ViewData["Title"]</h2>



<div>
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Account Information</h2>
            </div>
        </div>
    </div>
    <div class="container">
        <form method="post" class="" enctype="multipart/form-data">
            <input asp-for=@Model.Id hidden/>
            @*<input asp-for="User.Id" hidden />*@
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        
                        <div class="form-floating py-2 col-12">
                                <label asp-for="@Model.FirstName" class="ms-2"></label>
                                <input asp-for=@Model.FirstName class="form-control border-0 shadow" disabled />
                                <span asp-validation-for=@Model.FirstName class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                                <label asp-for=@Model.LastName class="ms-2"></label>
                                <input asp-for=@Model.LastName class="form-control border-0 shadow" disabled />
                                <span asp-validation-for=@Model.LastName class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                                <label asp-for=@Model.Email class="ms-2"></label>
                                <input asp-for=@Model.Email class="form-control border-0 shadow" disabled />
                                <span asp-validation-for=@Model.Email class="text-danger"></span>
                        </div>
                      
                        <div class="form-floating py-2 col-12">
                                <label asp-for=@Model.PhoneNumber class="ms-2"></label>
                                <input asp-for=@Model.PhoneNumber class="form-control border-0 shadow" disabled />
                                <span asp-validation-for=@Model.PhoneNumber class ="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <div class="form-check">
                                <label>Availability</label>
                                <br />
                                <input class="form-check-input" type="checkbox" asp-for=@Model.Availability />
                                <label class="form-check-label">Available</label>
                            </div>
                        </div>                   

        </form>
        <div class="row">
                <div class="col-6 col-md-3">
                    <a asp-controller="Driver" asp-action="Edit" class="btn btn-primary form-control border"> Edit</a>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Driver" asp-action="Index" class="btn btn-dark form-control border"> Cancel</a>
                </div>
        </div>
           
    </div>
</div>
</div>