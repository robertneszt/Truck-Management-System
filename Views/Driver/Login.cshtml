@{
    Layout = "~/Views/Shared/_LayoutForDriver.cshtml";
}

@model User

<h2>Login</h2>
<div class="row">
    <div class="col-md-4">
        <section>       
<form asp-action="Login" method="post">
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" asp-for="@Model.email" />
    </div>

    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" asp-for="@Model.password" required>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
        </section>
</div>
</div>